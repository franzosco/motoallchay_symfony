            rel="stylesheet">
    <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <link href="{{ asset('css/pages/dashboard.css') }}" rel="stylesheet" />
    {% block css %}
    {% endblock %}

  </head>
  <body>
    {{ include("layouts/navbar.html.twig", {'user': app.user}) }}

    <div class="main" style="min-height: 412px;">
    {% block content %}
    {% endblock %}
    </div>

    {% if app.user %}
    <div class="extra">
      <div class="extra-inner">
        <div class="container">
          <div class="row">

          </div>
        </div>
      </div>
    </div>

    <div class="footer">
      <div class="footer-inner">
        <div class="container">
          <div class="row">
              <div class="span12">
                Â© 2016 Motoallchay
              </div>
            </div>
        </div>
      </div>
    </div>
    {% endif %}

    <script src="{{ asset('js/jquery.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/excanvas.min.js') }}"></script>
    <script src="{{ asset('js/chart.min.js') }}"></script>
    <script src="{{ asset('js/full-calendar/fullcalendar.min.js') }}"></script>
    <script src="{{ asset('js/base.js') }}"></script>
{% if app.user %}
    <script>
      $( document ).ready(function() {
        var url = document.baseURI;

        if (/moto/.test(url)){
          var nav = $("#motos")[0];
          nav.className += " active";
        }
        else if (/usuario/.test(url)){
          {% if app.user.tipo == "Administrador" %}
          var nav = $("#usuarios")[0];
          nav.className += " active";
          {% endif %}
        }
        else if (/reporte/.test(url)){
          var nav = $("#reportes")[0];
          nav.className += " active";
        }
        else if (/reparacion/.test(url)){
          var nav = $("#reparaciones")[0];
          nav.className += " active";
        }
        else {
          var nav = $("#homepage")[0];
          nav.className += " active";
        }
      });
    </script>
{% endif %}
    {% block js %}
    {% endblock %}
  </body>
</html>